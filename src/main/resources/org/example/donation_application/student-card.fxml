<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.donation_application.controllers.StudentCardController"
      stylesheets="@styles/student-card.css"
      styleClass="student-card"
      spacing="15"
      alignment="CENTER"
      maxWidth="280"
      prefWidth="280"
      onMouseClicked="#handleCardClick">

    <!-- Padding for the card -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Student Photo Section -->
    <StackPane>
        <ImageView fx:id="studentImageView" fitHeight="100" fitWidth="100"
                   preserveRatio="true" styleClass="student-photo">
            <effect>
                <DropShadow radius="5" offsetY="2" color="#00000040"/>
            </effect>
        </ImageView>
    </StackPane>

    <!-- Student Basic Info -->
    <VBox alignment="CENTER" spacing="6">
        <Label fx:id="nameLabel" styleClass="student-name" wrapText="true"
               textAlignment="CENTER"/>
        <Label fx:id="schoolLabel" styleClass="student-school" wrapText="true"
               textAlignment="CENTER"/>
        <Label fx:id="streamLabel" styleClass="student-stream" wrapText="true"
               textAlignment="CENTER"/>
    </VBox>

    <!-- Status Indicator (for pending students) -->
    <HBox alignment="CENTER" spacing="5">
        <Label fx:id="statusLabel" styleClass="student-status" visible="false"/>
    </HBox>

    <!-- Click to expand hint -->
    <HBox alignment="CENTER">
        <Label text="Click for details" styleClass="click-hint"
               textAlignment="CENTER"/>
    </HBox>
</VBox>
